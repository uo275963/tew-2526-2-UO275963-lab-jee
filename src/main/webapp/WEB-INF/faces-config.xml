<?xml version="1.0" encoding="UTF-8"?>
<faces-config
    xmlns="https://jakarta.ee/xml/ns/jakartaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-facesconfig_4_0.xsd"
    version="4.0">

    <!-- Regla de navegación general con autenticación -->
    <navigation-rule>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>listado</from-outcome>
            <if>#{beanLogin.isLogged()}</if>
            <to-view-id>/listado.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>listado</from-outcome>
            <to-view-id>/login.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>alta</from-outcome>
            <if>#{beanLogin.isLogged()}</if>
            <to-view-id>/formulario.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>alta</from-outcome>
            <to-view-id>/login.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

    <!-- Regla de navegación para ir al login -->
    <navigation-rule>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>login</from-outcome>
            <to-view-id>/login.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

    <!-- Regla de navegación desde login -->
    <navigation-rule>
        <from-view-id>/login.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{beanLogin.login}</from-action>
            <from-outcome>exito</from-outcome>
            <to-view-id>/listado.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

    <!-- Regla de navegación desde formulario.xhtml -->
    <navigation-rule>
        <from-view-id>/formulario.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{beanAlumnos.salva}</from-action>
            <from-outcome>exito</from-outcome>
            <to-view-id>/listado.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

    <!-- Regla de navegación desde listado.xhtml -->
    <navigation-rule>
        <from-view-id>/listado.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{beanAlumnos.baja}</from-action>
            <from-outcome>exito</from-outcome>
            <to-view-id>/listado.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>editar</from-outcome>
            <to-view-id>/formulario.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

    <!-- Regla de navegación global para errores -->
    <!--
    <navigation-rule>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>error</from-outcome>
            <to-view-id>/error.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    -->

    <!-- Regla de navegación a página privada -->
    <navigation-rule>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>privada</from-outcome>
            <to-view-id>/restricted/privada.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

    <!-- Configuración de i18n -->
    <application>
        <resource-bundle>
            <base-name>messages</base-name>
            <var>msgs</var>
        </resource-bundle>
    </application>  

</faces-config>